@model SalonGarden.Core.Entities.Evaluation

@{
    ViewData["Title"] = "Create";
}

<h3>New Evaluation</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Student</label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId">
                    <option>Select</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Type</label>
                <select asp-for="EvaluationTypeId" class="form-control" asp-items="ViewBag.EvaluationTypeId">
                    <option>Select</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Technique</label>
                <select asp-for="TechniqueId" class="form-control" asp-items="ViewBag.TechniqueId">
                    <option>Select</option>
                </select>
                <span asp-validation-for="TechniqueId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
